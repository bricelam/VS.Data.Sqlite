<?xml version="1.0" encoding="utf-8" ?>
<DataViewSupport xmlns="http://schemas.microsoft.com/VisualStudio/2007/07/Data/DataViewSupport">
  <Views>
    <View name="SQLite">
      <ConnectionNode>
        <InitialDisplayName>{Root.DataSource}</InitialDisplayName>
        <Children>
          <StaticNode>
            <DisplayName resource="Tables" />
            <Children>
              <Selection type="Table" ordering="Name">
                <SelectionNode nodeId="table">
                  <Icon name="Table" />
                  <!-- TODO: Command to show Sql? -->
                  <Properties>
                    <Property name="Name" />
                  </Properties>
                  <Children>
                    <StaticNode>
                      <DisplayName resource="Columns" />
                      <Children>
                        <Selection type="TableColumn" restrictions="{table.Name}" ordering="CID">
                          <SelectionNode>
                            <!-- TODO: UniqueKey and ForeignKey? -->
                            <Icon name="PrimaryKey" when="{PrimaryKey} &lt;> 0" />
                            <Icon name="ComputedColumn" when="{Hidden} IN (2, 3)" />
                            <Icon name="Column" />
                            <Properties>
                              <Property name="Table" />
                              <Property name="CID" />
                              <Property name="Name" />
                              <Property name="Type" />
                              <Property name="NotNull" />
                              <Property name="DefaultValue" />
                              <Property name="PrimaryKey" />
                              <Property name="Hidden" />
                            </Properties>
                          </SelectionNode>
                        </Selection>
                      </Children>
                    </StaticNode>
                    <StaticNode>
                      <DisplayName resource="Triggers" />
                      <Children>
                        <Selection type="TableTrigger" restrictions="{table.Name}" ordering="Name">
                          <SelectionNode>
                            <Icon name="Trigger" />
                            <Properties>
                              <Property name="Table" />
                              <Property name="Name" />
                            </Properties>
                          </SelectionNode>
                        </Selection>
                      </Children>
                    </StaticNode>
                    <!-- TODO: Indexes and Foreign Keys -->
                  </Children>
                </SelectionNode>
              </Selection>
            </Children>
          </StaticNode>
          <StaticNode>
            <DisplayName resource="Views" />
            <Children>
              <Selection type="View" ordering="Name">
                <SelectionNode nodeId="view">
                  <Icon name="View" />
                  <Properties>
                    <Property name="Name" />
                  </Properties>
                  <Children>
                    <Selection type="ViewColumn" restrictions="{view.Name}" ordering="CID">
                      <SelectionNode>
                        <Icon name="Column" />
                        <Properties>
                          <Property name="View" />
                          <Property name="CID" />
                          <Property name="Name" />
                          <Property name="Type" />
                        </Properties>
                      </SelectionNode>
                    </Selection>
                    <StaticNode>
                      <DisplayName resource="Triggers" />
                      <Children>
                        <Selection type="ViewTrigger" restrictions="{view.Name}" ordering="Name">
                          <SelectionNode>
                            <Icon name="Trigger" />
                            <Properties>
                              <Property name="View" />
                              <Property name="Name" />
                            </Properties>
                          </SelectionNode>
                        </Selection>
                      </Children>
                    </StaticNode>
                  </Children>
                </SelectionNode>
              </Selection>
            </Children>
          </StaticNode>
        </Children>
      </ConnectionNode>
    </View>
  </Views>
  <Resources baseName="Microsoft.VisualStudio.Data.Sqlite.Properties.Resources" />
</DataViewSupport>